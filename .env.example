# Конфигурация Менеджера задач
# Скопируйте этот файл в .env и заполните реальными значениями

# Секретный ключ Flask (измените в продакшене!)
SECRET_KEY=your-super-secret-key-change-in-production

# Настройки базы данных PostgreSQL
DATABASE_URL=postgresql://username:password@localhost/taskmanager
DEV_DATABASE_URL=postgresql://username:password@localhost/taskmanager_dev

# Настройки Telegram бота
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Секретный токен для Google Forms (опционально, для обратной совместимости)
GOOGLE_FORMS_SECRET_TOKEN=your_google_forms_secret_token_here

# Окружение Flask
FLASK_ENV=development
FLASK_DEBUG=True

# Настройки приложения
TASKS_PER_PAGE=20
NOTIFICATION_INTERVAL_HOURS=2
